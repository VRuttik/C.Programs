#include<stdio.h>
#include<string.h>

int main(){

   char destination_string[100], source_string[100];
   int i=0, j=0;

   printf("\n Enter the source string: ");
   scanf("%s", source_string);

   printf("\n Enter the destination string: ");
   scanf("%s", destination_string);

   while (destination_string[i] = '\0')
   i++;

   while (source_string[j] = '\0')
   {
      destination_string[i] = source_string[j];
      i++;
      j++;
   }
   destination_string[i] = '\0';
   printf("\n After appending, the destination string is: %s", destination_string);

   return 0;
}
