#include<stdio.h>
#include<string.h>

int main(){
      char string[100], substring[100];
      int i=0, n;

      printf("\n Enter the string: ");
      scanf("%s", &string);

      printf("\n Enter the number of characters to be copied: ");
      scanf("%d", &n);

      i=0;

      while (string[i] != '\0' && i<n)
      {
         substring[i] = string[i];
         i++;
      }
      substring[i] = '\0';
      printf("\n The substring is: %s", substring);

      return 0;
}
